/* waveform.css */
/* ---------- WAVEFORM DISPLAY AREA ---------- */

/* Main waveform container */
#waveform {
    width: 100%;
    height: 150px;
    background: 
        repeating-linear-gradient(
            to right, rgba(255, 255, 255, 0.05) 0px, rgba(255, 255, 255, 0.05) 20px
        ), /* Vertical grid lines */
        repeating-linear-gradient(
            to top, rgba(255, 255, 255, 0.05) 0px, rgba(255, 255, 255, 0.05) 20px
        ); /* Horizontal grid lines */
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
}

/* Clock signal line */
.clock-signal {
    position: absolute;
    top: 50%; /* Center vertically */
    left: 0;
    height: 2px;
    width: 200%;
    background: none;
}

/* Clock edges (square wave pattern) */
.clock-signal::before {
    content: "";
    position: absolute;
    height: 100%;
    width: 200%;
    background-image: 
        linear-gradient(to right, 
            transparent 0%, transparent 25%, #00ff99 25%, #00ff99 50%, 
            transparent 50%, transparent 75%, #00ff99 75%, #00ff99 100%);
    background-size: 40px 100%; /* Width of one high+low cycle */
    animation: move-clock 1s linear infinite; /* Continuous movement */
}

/* Clock movement animation */
@keyframes move-clock {
    from { transform: translateX(0); }
    to { transform: translateX(40px); } /* Move right */
}
